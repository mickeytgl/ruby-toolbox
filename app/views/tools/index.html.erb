<h3>Check out all the options near you!</h3>

<div class="row">
<div class="col col-lg-6">
<% @tools.each do |tool| %> 
  <div class="row">
    <div class="col-md-4">

    </div>
    <div class="col-md-6">
      <p><%= tool.name %></p>
      <p><%= tool.description %></p>
      <p><%= link_to "See what's cooking", tool_path(tool.slug)  %></p>
    </div>

  </div>
<% end %>

